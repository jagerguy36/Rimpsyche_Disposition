<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef>
    <defName>Rimpsyche_AdrenalineRush</defName>
    <label>adrenaline rush</label>
    <description>A rush of adrenaline. It increases heart rate and blood pressure while sharpening the senses and heightening focus.</description>
    <hediffClass>Maux36.RimPsyche.Disposition.Hediff_AdrenalineRush</hediffClass>
    <defaultLabelColor>(1, 0.2, 0.2)</defaultLabelColor>
    <initialSeverity>0</initialSeverity>
    <minSeverity>0</minSeverity>
    <maxSeverity>1</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-4.8</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <label>negligible</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <label>trivial</label>
        <minSeverity>0.1</minSeverity>
        <capMods>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.1</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>0.05</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.05</offset>
          </li>
        </capMods>
        <painFactor>0.95</painFactor>
      </li>
      <li>
        <label>slight</label>
        <minSeverity>0.2</minSeverity>
        <capMods>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.2</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>0.1</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>0.05</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.05</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>0.05</offset>
          </li>
        </capMods>
        <painFactor>0.9</painFactor>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.3</minSeverity>
        <capMods>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.3</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>0.1</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>0.05</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.1</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>0.1</offset>
          </li>
        </capMods>
        <painFactor>0.85</painFactor>
      </li>
      <li>
        <label>intense</label>
        <minSeverity>0.45</minSeverity>
        <capMods>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.4</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>0.15</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>0.1</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.1</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>0.1</offset>
          </li>
        </capMods>
        <painFactor>0.8</painFactor>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.55</minSeverity>
        <capMods>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.5</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>0.2</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>0.15</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.15</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>0.15</offset>
          </li>
        </capMods>
        <painFactor>0.75</painFactor>
      </li>
    </stages>
  </HediffDef>
</Defs>
